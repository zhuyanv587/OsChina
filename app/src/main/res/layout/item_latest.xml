<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F5FFFA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/latest_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/latest_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工程师"/>
            <TextView
                android:id="@+id/latest_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2小时前"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/latest_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="国外千辛万苦发展出html5，被tx全部阉割掉做出小程序游戏，最搞笑的是小游戏做一个weapp-adapter把windows,document的补回来，真是没事找事做。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@mipmap/zf"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/latest_relay"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="转发"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:src="@mipmap/pl"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/latest_discuss"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/zan"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/latest_num"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="222"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888989"
        android:layout_marginTop="5dp"/>
</LinearLayout>
</LinearLayout>