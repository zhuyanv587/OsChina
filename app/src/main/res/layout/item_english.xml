<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<LinearLayout
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
   android:orientation="vertical">

    <TextView
        android:id="@+id/english_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Mastercard joins Aussie digital ID market with Dakin and Australia Post partnerships"/>

    <TextView
        android:id="@+id/english_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="Mastercard has chose Australia as the launch market for its digital identity platform,announcing two trials with Australia Post and Dakin University"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/english_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asha Barbaschow"/>

        <TextView
            android:id="@+id/english_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="昨天"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/english_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    <ImageView
        android:id="@+id/english_img"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888989"/>
</LinearLayout>