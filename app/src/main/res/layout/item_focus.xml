<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@drawable/square_style"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_hair"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/hair"/>

            <TextView
                android:id="@+id/focus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:text="jamiesun"/>

            <TextView
                android:id="@+id/focus_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#BEBEBE"
                android:gravity="center_horizontal"
                android:textSize="10sp"
                android:text="PandaRSS 作者"/>
            <Button
                android:id="@+id/bnt_focus"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/primary"
                android:textColor="#ffffff"
                android:text="+关注"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/square_style"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_hair1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/hair1"/>

            <TextView
                android:id="@+id/focus_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:text="socoding"/>

            <TextView
                android:id="@+id/focus_author1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#BEBEBE"
                android:gravity="center_horizontal"
                android:textSize="10sp"
                android:text="Node-Lua 作者"/>
            <Button
                android:id="@+id/bnt_focus1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/primary"
                android:textColor="#ffffff"
                android:text="+关注"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>