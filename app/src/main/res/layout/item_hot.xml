<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F5FFFA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hot_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5sp">

            <TextView
                android:id="@+id/hot_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小小编辑"
                android:textSize="20dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/hot_time"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="三小时前"/>

                <TextView
                    android:id="@+id/hot_from"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="来自iPone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="四年工作经验，目前深圳16k，深圳有房，家人介绍了一份老家国企单位，熟人介绍进去，稳进，但是进去不是做开发了，职位是网络管理员，薪资7.5k，老家放假5-9k，市中心房价9k左右。怎么选？"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@mipmap/zf"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/hot_relay"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="转发"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@mipmap/pl"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/hot_discuss"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/zan"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/hot_num"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="222"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888989"
        android:layout_marginTop="10dp"/>
</LinearLayout>
</LinearLayout>
